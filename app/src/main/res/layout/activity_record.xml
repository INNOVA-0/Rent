<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".record"
    android:orientation="vertical"
    android:weightSum="1.1"
    android:paddingTop="12dp"
    android:paddingRight="16dp"
    android:paddingLeft="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.1"
        android:weightSum="1"
        android:layout_marginBottom="5dp">
        <Space
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.62"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.23"
            android:textColor="#707070"
            android:textSize="25sp"
            android:textStyle="bold"
            android:gravity="center"
            android:text="@string/admin"
            android:id="@+id/recordRole"/>

        <ImageView
            android:id="@+id/recordAvatar"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.15"
            android:src="@drawable/person"
            />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="0.1"
        android:layout_gravity="right"
        android:textColor="#707070"
        android:textSize="21sp"
        android:gravity="center"
        android:text="@string/record"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="0.07"
        android:layout_gravity="right"
        android:textColor="#111111"
        android:textSize="16sp"
        android:gravity="center"
        android:text="ID"/>

    <Spinner
        android:id="@+id/idSelectorR"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.08"
        android:textAlignment="textEnd"
        android:gravity="end"
        style="@style/SpinnerTheme"
        android:padding="5dp"

        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="0.07"
        android:layout_gravity="right"
        android:textColor="#111111"
        android:textSize="16sp"
        android:textStyle="bold"
        android:gravity="center"
        android:text="@string/block"/>

    <Spinner
        android:id="@+id/blockSelectorR"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.08"
        android:layout_gravity="left"
        style="@style/SpinnerTheme"
        android:textAlignment="textEnd"
        android:gravity="end"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_gravity="right"
        android:layout_weight="0.07"
        android:gravity="center"
        android:text="@string/name"
        android:textColor="#111111"
        android:textSize="16sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/recordName"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.08"
        android:layout_gravity="left"
        android:background="@drawable/bounding_box"
        android:padding="3dp"
        android:paddingEnd="8dp"
        android:paddingStart="8dp"
        android:gravity="right|center_vertical"
        android:inputType="text"
        android:hint="@string/selectTenantName"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="0.07"
        android:layout_gravity="right"
        android:textColor="#111111"
        android:textSize="16sp"
        android:textStyle="bold"
        android:gravity="center"
        android:text="@string/rentAmount"/>

    <EditText
        android:id="@+id/creditAmount"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.08"
        android:layout_gravity="left"
        android:background="@drawable/bounding_box"
        android:padding="3dp"
        android:paddingEnd="8dp"
        android:paddingStart="8dp"
        android:gravity="right|center_vertical"
        android:inputType="number"

        android:hint="@string/enterRent"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="0.07"
        android:layout_gravity="right"
        android:textColor="#111111"
        android:textSize="16sp"
        android:gravity="center"
        android:text="@string/description"/>

    <EditText

        android:id="@+id/creditDescription"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.15"
        android:layout_gravity="left"
        android:hint="@string/description"
        android:textSize="17sp"
        android:padding="10dp"
        android:gravity="right"
        android:background="@drawable/bounding_box"
        android:layout_marginBottom="5dp"
        />

    <Button
        android:layout_marginTop="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/save"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:id="@+id/record_btn_save"
        android:background="@drawable/round_views"
        android:textColor="#FFF"
        android:layout_gravity="right"/>

</LinearLayout>