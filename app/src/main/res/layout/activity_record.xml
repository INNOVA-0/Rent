<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".record"
    android:orientation="vertical"
    android:weightSum="1.3"
    android:padding="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.1"
        android:weightSum="1">
        <Space
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.45"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.2"
            android:textColor="#707070"
            android:textSize="25sp"
            android:textStyle="bold"
            android:gravity="center"
            android:text="@string/admin"
            android:id="@+id/recordRole"/>

        <ImageView
            android:id="@+id/recordAvatar"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.4"
            android:src="@drawable/person"
            />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="0.1"
        android:layout_gravity="right"
        android:textColor="#707070"
        android:textSize="25sp"
        android:textStyle="bold"
        android:gravity="center"
        android:text="@string/record"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="0.07"
        android:layout_gravity="right"
        android:textColor="#111111"
        android:textSize="25sp"
        android:textStyle="bold"
        android:gravity="center"
        android:text="ID"/>

    <Spinner

        android:id="@+id/idSelector"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.07"
        android:layout_gravity="left"
        style="@style/SpinnerTheme"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="0.07"
        android:layout_gravity="right"
        android:textColor="#111111"
        android:textSize="25sp"
        android:textStyle="bold"
        android:gravity="center"
        android:text="@string/block"/>

    <Spinner

        android:id="@+id/blockSelector"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.07"
        android:layout_gravity="left"
        style="@style/SpinnerTheme"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="0.1"
        android:layout_gravity="right"
        android:textColor="#111111"
        android:textSize="25sp"
        android:textStyle="bold"
        android:gravity="center"
        android:text="@string/name"/>

    <Spinner

        android:id="@+id/nameSelector"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.07"
        android:layout_gravity="left"
        style="@style/SpinnerTheme"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="0.07"
        android:layout_gravity="right"
        android:textColor="#111111"
        android:textSize="25sp"
        android:textStyle="bold"
        android:gravity="center"
        android:text="@string/rentAmount"/>

    <Spinner

        android:id="@+id/rentSelector"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.07"
        android:layout_gravity="left"
        style="@style/SpinnerTheme"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="0.07"
        android:layout_gravity="right"
        android:textColor="#111111"
        android:textSize="25sp"
        android:textStyle="bold"
        android:gravity="center"
        android:text="@string/description"/>

    <EditText

        android:id="@+id/advanceSelector"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.15"
        android:layout_gravity="left"
        android:hint="@string/description"
        android:textSize="17sp"
        android:padding="10dp"
        android:background="@drawable/bounding_box"
        android:layout_marginBottom="5dp"
        />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/save"
        android:textStyle="bold"
        android:id="@+id/btn_save"
        android:background="@drawable/round_views"
        android:fontFamily="@font/alef"
        android:textColor="#FFF"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"/>

</LinearLayout>