<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".expenditure"
    android:orientation="vertical"
    android:weightSum="1.3"
    android:padding="20dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.1"
        android:weightSum="1">
        <Space
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.45"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.2"
            android:textColor="#707070"
            android:textSize="25sp"
            android:textStyle="bold"
            android:gravity="center"
            android:text="@string/admin"/>

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.4"
            android:src="@drawable/person"/>
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="0.1"
        android:layout_gravity="right"
        android:textColor="#707070"
        android:textSize="21sp"
        android:textStyle="bold"
        android:gravity="center"
        android:text="@string/expenditure"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="0.08"
        android:gravity="center"
        android:layout_gravity="right"
        android:text="@string/monthlyExpenditure"
        android:textColor="#F60A20"
        android:textSize="21sp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="0.08"
        android:gravity="center"
        android:layout_gravity="right"
        android:text="1456900"
        android:textColor="#F60A20"
        android:textSize="21sp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="0.08"
        android:gravity="center"
        android:layout_gravity="right"
        android:text="@string/completeExpenditure"
        android:textColor="#F60A20"
        android:textSize="21sp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="0.08"
        android:gravity="center"
        android:layout_gravity="right"
        android:text="658898870"
        android:textColor="#F60A20"
        android:textSize="21sp"
        />
<!--   edit texts -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="0.09"
        android:layout_gravity="right"
        android:textColor="#111111"
        android:textSize="22sp"
        android:textStyle="normal"
        android:gravity="center"
        android:text="@string/expenditure"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.1"
        android:layout_gravity="left"
        android:hint="@string/amountSpent"
        android:background="@drawable/bounding_box"
        android:paddingRight="5dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="0.09"
        android:layout_gravity="right"
        android:textColor="#111111"
        android:textSize="22sp"
        android:textStyle="normal"
        android:gravity="center"
        android:text="@string/typeSpent"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.1"
        android:layout_gravity="left"
        android:hint="@string/selectetypeSpent"
        android:background="@drawable/bounding_box"
        android:paddingRight="5dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="0.09"
        android:layout_gravity="right"
        android:textColor="#111111"
        android:textSize="22sp"
        android:textStyle="normal"
        android:gravity="center"
        android:text="@string/description"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.15"
        android:layout_gravity="left"
        android:hint="@string/description"
        android:textSize="17sp"
        android:padding="10dp"
        android:background="@drawable/bounding_box"
        android:layout_marginBottom="5dp"
        />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/save"
        android:textStyle="bold"
        android:id="@+id/btn_save"
        android:background="@drawable/round_views"
        android:fontFamily="@font/alef"
        android:textColor="#FFF"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"/>

</LinearLayout>